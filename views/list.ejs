<%- include("header") %> 

    <div class="context">
        <div class="heading box">
            <h1><%= listTitle %></h1>
        </div>
        <div class="box">
                <% for (let i = 0; i < newListItems.length; i++) { %>
                    <div class="item">
                        <input type="checkbox">
                        <p><%= newListItems[i] %> </p>
                    </div>
                <% } %>
        
            <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="Add new one" autocomplete="off">
                <button type="submit" name="btn" value="<%= listTitle %>">+</button>
            </form>

        </div>
    </div>

