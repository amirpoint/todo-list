<%- include("header") %> 

    <div class="context">
        <div class="heading box">
            <h1><%= listTitle %></h1>
        </div>
        <div class="box">
                <% newListItems.forEach(function(item){ %>
                    <form action="/delete" method="post">
                        <div class="item">
                            <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                            <p><%= item.name %> </p>
                        </div>
                    </form>	
                <% }); %>

            <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="Add new one" autocomplete="off">
                <button type="submit" name="btn" value="<%= listTitle %>">+</button>
            </form>

        </div>
    </div>

